.logo {
  width: 168rpx;
  height: 168rpx;
  margin: 180rpx auto 70rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.info {
  text-align: center;
}

.info-hi {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.info-thank {
  font-size: 30rpx;
	color:gray;
}

.logobutton {
  position: fixed;
	bottom:30rpx;
	left:50%;
	transform: translateX(-50%);
	width: 90%;
	font-size: 36rpx;
	color: #fff;
	background-color:#24c771;
}

.logobutton::after {
  border: none;
  border-radius: 0;
}
