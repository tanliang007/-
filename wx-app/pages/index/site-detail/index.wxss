/* pages/pilepoint-list/index.wxss */

page {
    background: #f7f7f7;
}

.manager {
    background-color: #fff;
    padding: 24rpx 0 0 20rpx;
    box-shadow: 0rpx 10rpx 20rpx -10rpx #e9e9e9;
    margin-bottom: 15rpx;
}

.manager-wrapper {
    background-color: #fff;
    display: flex;
    padding: 28rpx 0 28rpx 40rpx;
}

.logpic {
    flex: 0 0 90rpx;
    height: 130rpx;
}

.logpic-log {
    width: 100%;
    height: 100%;
}

.content {
    flex: 1;
    margin-left: 44rpx;
}

.address {
    font-size: 32rpx;
    color: #333;
    margin-top: -5rpx;
}

.specifiaddr {
    font-size: 25rpx;
    margin: 8rpx 0 12rpx 0;
    color: #8b8b8b;
}

.time {
    font-size: 25rpx;
    color: #737373;
}

.pilelist {
    margin-bottom: 20rpx;
    position: relative;
    padding: 0rpx 20rpx 0 20rpx;
}

.serialnum {
    display: flex;
    align-items: center;
    background: #fff;
    margin: 20rpx 0;
}

.serialnum-txt {
    flex: 0 0 80rpx;
    font-size: 28rpx;
}

.serialnum-txt2 {
    font-size: 30rpx;
    width: 420rpx;
}

.addr {
    margin-bottom: 2rpx;
    display: flex;
    align-items: center;
    background: #fff;
}

.addr-txt {
    flex: 0 0 80rpx;
    vertical-align: top;
    font-size: 30rpx;
}

.addr-txt2 {
    flex: 1;
    font-size: 28rpx;
    color: #8b8b8b;
    position: relative;
}


/*没有桩点时的css*/

.jiancontainer {
    margin-top: 100rpx;
}

.jianshepic {
    width: 340rpx;
    height: 302rpx;
    text-align: center;
    display: block;
    margin: 0 auto;
}

.jianshe {
    text-align: center;
    color: #3dca75;
    font-size: 26rpx;
    margin-top: 40rpx;
}

.tosite {
    position: fixed;
    left: 50%;
    bottom: 20rpx;
    transform: translateX(-50%);
    width: 300rpx;
    height: 90rpx;
    line-height: 90rpx;
    background: linear-gradient(to right, #1ec678, #3ace57);
    font-size: 36rpx;
    text-align: center;
    border-radius: 50rpx;
    color: #fff;
}

.tosite-hover {
    position: fixed;
    left: 50%;
    bottom: 25rpx;
    transform: translateX(-50%);
    width: 300rpx;
    height: 90rpx;
    line-height: 90rpx;
    background: linear-gradient(to right, #1ec678, #3ace57);
    font-size: 36rpx;
    text-align: center;
    border-radius: 50rpx;
    color: #fff;
}


