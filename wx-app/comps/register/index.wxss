/* comps/register/index.wxss */

/*模态框*/

.wxapp-modal {
}

.content {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  width: 600rpx;
  background: #fff;
  border-radius: 15rpx;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 88;
  background: rgba(1, 1, 1, 0.6);
}

.the-title {
  padding: 65rpx;
  font-size: 30rpx;
	position: relative;
}
.close{
	position: absolute;
	top:25rpx;
	right:25rpx;
	width: 32rpx;
	height: 32rpx;
	text-align: center;
	line-height: 50rpx;
	/* background-color: red; */
}
.close image{
	width: 100%;
	height: 100%;
	display: block;
}

.keyphone {
  padding: 0 65rpx;
}

.code {
  padding: 60rpx 65rpx 90rpx 65rpx;
  display: flex;
}

.codechild {
}

.code-input {
  height: 35rpx;
  line-height: 35rpx;
}

.input-placeholder {
  font-size: 35rpx;
  line-height: 35rpx;
}

.contactgetcode {
  display: inline-block;
  vertical-align: middle;
  flex: 0 0 180rpx;
  font-size: 35rpx;
  color: #24c771;
  text-align: center;
  padding-left: 10rpx;
  margin-left: 10rpx;
}

.countdownnow {
  flex: 0 0 180rpx;
  font-size: 35rpx;
  color: #c9c9c9;
  padding-left: 10rpx;
  margin-left: 10rpx;
  text-align: center;
}

.mysubmit {
  background-color: #24c771;
  color: #fff;
}

.covermysubmit {
  background-color: #24c771;
  margin-bottom: -10rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}
