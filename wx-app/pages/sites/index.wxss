}

.tosite {
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(to right, #1ec678, #3ace57);
  font-size: 36rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #fff;
}

.tosite-hover {
  position: fixed;
  left: 50%;
  bottom: 25rpx;
  transform: translateX(-50%);
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(to right, #1ec678, #3ace57);
  font-size: 36rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #fff;
}
