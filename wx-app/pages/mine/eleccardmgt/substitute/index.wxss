/* pages/topup/index.wxss */

page {
  background: #fff;
	height: 100vh;
}

.cardname {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #fff;
	border-bottom:20rpx solid #f7f7f7;
}

.cardname image {
  width: 50rpx;
  height: 38rpx;
  vertical-align: middle;
  display: inline-block;
}

.cardname-input {
  padding-left: 15rpx;
}

.cardname input {
  height: 56rpx;
  flex: 1;
  /* background-color: red; */
}



.topuptitle {
  padding-left: 38rpx;
  padding-right: 40rpx;
  background-color: #fff;
  font-size: 32rpx;
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: space-between;
}

.topuptitle .titleleft {
  margin-left: 2.5%;
}

.titleleft span {
  font-size: 35rpx;
}

.titleright .icon-youjiantou {
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
}

.titleright .text {
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  color: #1ec678;
}

.topupwrapper {
  background-color: #fff;
  padding: 0 38rpx 0rpx 38rpx;
}

.topupAmount {
  width: 47%;
  height: 190rpx;
  line-height: 190rpx;
  box-sizing: border-box;
  border: 2rpx solid #28c671;
  border-radius: 5px;
  float: left;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative; /*父元素给相对定位*/
}

.topupAmount view {
  text-align: center;
}

.chong {
  font-size: 30rpx;
  /* line-height: 130rpx; */
  color: #333;
  height: 100%;
}

.chong-child {
  font-size: 70rpx;
  line-height: 185rpx;
}

.song {
  font-size: 24rpx;
  line-height: 24rpx;
  position: absolute;
  right: -80rpx;
  top: -80rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: #ff4518;
  transform: rotate(45deg);
}

.songxie {
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  color: #fff;
  font-size: 22rpx;
  transform: translateX(-50%);
}

/*立即支付支付按钮*/

#oncePay {
  width: 590rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  display: block;
  background: linear-gradient(to right, #3ace57, #1ec678);
  margin: 0 auto;
  margin-top: 50rpx;
  border-radius: 100rpx;
}

#graypay {
  width: 100%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  display: block;
  background: linear-gradient(to right, #7adb8e, #68d7a4);
  margin: 0 auto;
  margin-top: 50rpx;
  border-radius: 100rpx;
}

.atOncePay {
  position: relative;
  top: 6rpx;
}

.statement {
  display: block;
  padding: 0 38rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 25rpx;
  margin-top: 46rpx;
  color: #8c8c8c;
}

.statementWrapper {
  color: #1fc687;
}

/*充值卡充值按钮样式*/

.navtopup-card {
  margin-top: 15rpx;
  padding: 0 40rpx;
  background: #fff;
}

.topup-card {
  padding: 26rpx 0;
}

.topup-cardleft {
  font-size: 35rpx;
}

.topup-cardleft span {
  display: inline-block;
  vertical-align: middle;
}

.topup-cardleft image {
  width: 50rpx;
  height: 38rpx;
  vertical-align: middle;
  display: inline-block;
  margin-right: 10rpx;
}

.topup-card {
  display: flex;
  justify-content: space-between;
}

/* 扫码充电样式 */

.saocard {
  width: 40rpx;
  height: 40rpx;
}

.saocard image {
  width: 100%;
  height: 100%;
  display: block;
}
