/* pages/sites/index.wxss */

page {
  background: #f7f7f7;
  padding-bottom: 130rpx;
}

.manager-header {
  text-align: center;
}

.site {
  width: 420rpx;
  height: 210rpx;
  margin: 88rpx 0;
}

.text1 {
  font-size: 26rpx;
  margin-bottom: 35rpx;
  color: #3ace57;
}

.manager {
  padding: 0 24rpx;
  margin-top: 20rpx;
  box-shadow: 0rpx 10rpx 20rpx -10rpx #e9e9e9;
}

/*离线状态样式*/

.manager-wrapper2 {
  background-color: #fff;
  display: flex;
  /* align-items:center; */
  padding: 28rpx 0 28rpx 40rpx;
}

.manager-wrapper2 .logpic {
  flex: 0 0 93rpx;
  height: 130rpx;
}

.manager-wrapper2 .logpic-log {
  width: 100%;
  height: 100%;
}

.manager-wrapper2 .content {
  flex: 1;
  margin-left: 44rpx;
}

.manager-wrapper2 .address {
  font-size: 32rpx;
  color: #d8d8d8;
  line-height: 32rpx;
}

.difstatus {
  display: flex;
}

.manager-wrapper2 .difstatus .specifiaddr {
  font-size: 25rpx;
  flex: 1;
  padding: 10rpx 0;
  color: #d8d8d8;
}

.manager-wrapper2 .difstatus .stau {
  flex: 0 0 200rpx;
  color: #d8d8d8;
  text-align: center;
  font-size: 30rpx;
}

.manager-wrapper2 .difstatus .stauchild {
  display: table;
  width: 100%;
  height: 100%;
}

.manager-wrapper2 .difstatus .staucontent {
  display: table-cell;
  vertical-align: middle;
}

.manager-wrapper2 .time {
  font-size: 25rpx;
  color: #d8d8d8;
}

