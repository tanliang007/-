/* pages/withdrawal/index.wxss */

page {
  height: 100%;
  position: relative;
  background: #f7f7f7;
  border-top: 1rpx solid transparent;
}

.choosenbank {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 3;
}

.surebank {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 34rpx;
  border-bottom: 20rpx solid #f7f7f7;
}

.pick {
  height: 400rpx;
}

.column {
  padding-left: 50rpx;
  position: relative;
}

.bankinfo {
  display: float;
  margin-top: 10px;
}

.addcard {
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 120rpx;
  font-size: 34rpx;
  border-top: 1rpx solid #f2f2f2;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
  -moz-opacity: 0.5;
  filter: alpha(opacity=50);
  width: 100%;
  height: 100%;
  z-index: 2;
}

/*展示选中的银行卡样式*/

.curbankview {
  display: flex;
  align-items: center;
  padding: 35rpx;
  background: #fff;
  margin: 20rpx 0;
}

.icon {
  display: inline-block;
  margin-top: -15rpx;
  width: 80rpx;
  height: 80rpx;
}

.bkinfo {
  margin-left: 18rpx;
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
}

.bkinfo_b {
  color: #cfcfcf;
  font-weight: 300;
}

.icon-youjiantou {
  height: 12.5rpx;
  line-height: 12.5rpx;
  color: #7c7c7c;
}

/*提现输入框部分样式*/

.inputamount {
  color: #26c672;
  font-size: 26rpx;
  padding-left: 26rpx;
  padding-right: 26rpx;
  background-color: #fff;
}

.amount {
  padding: 40rpx 0 40rpx 0rpx;
  color: #333;
  font-size: 36rpx;
}

.keyamount {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f7f7f7;
}

.symbol {
  font-size: 60rpx;
  display: inline-block;
  color: #333;
  font-weight: bold;
  align-self: center;
  margin-right: 20rpx;
}

.keyamount-input {
  font-size: 60rpx;
  color: #333;
  height: 100rpx;
}

.miaoshu {
  white-space: nowrap;
  font-size: 30rpx;
  height: 70rpx;
  display: flex;
  color: #848484;
  justify-content: space-between;
}

.miaoshu .red {
  color: #eb5150;
  height: 70rpx;
  line-height: 70rpx;
}

.miaoshu .gray {
  color: #c9c9c9;
  height: 70rpx;
  line-height: 70rpx;
}

.miaoshu .b {
  height: 70rpx;
  line-height: 70rpx;
}

.actualtoaccount {
  color: #696969;
  font-size: 30rpx;
  padding: 26rpx 0 0 26rpx;
}

.actualtoaccount.hidden {
  visibility: hidden;
}

.actualtoaccount.show {
  visibility: visible;
}

/* 收款人姓名样式 */

.payee {
  display: flex;
  display: -webkit-flex;
  padding: 26rpx 0 26rpx 26rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
  align-items: center;
}

.payee-label {
  width: 50rpx;
  height: 50rpx;
  margin-right: 22rpx;
}

.payee-label image {
  width: 50rpx;
  height: 50rpx;
}

.payee-input {
  font-size: 30rpx;
}

.allturnout {
  white-space: nowrap;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
}

/*确定按钮  */

.sure {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  color: #fff;
  background: linear-gradient(to right, #1ec678, #3ace57);
  margin-top: 90rpx;
  border-radius: 80rpx;
}

.suredown {
  position: relative;
  top: 6rpx;
}

.tips {
  padding: 22rpx 0 0 26rpx;
  font-size: 26rpx;
  color: #696969;
}

.tips .title {
  font-size: 28rpx;
}

tips .tip1 {
  padding: 10rpx;
}
